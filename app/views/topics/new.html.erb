<% title "New Topic" %>
<h1 class="text-center"><%= @tower.name.upcase %></h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for :topic do |f| %>
            <label>New Topic Name</label>
            <%= f.text_field :name, class: 'form-control'%>
            <%= f.hidden_field :tower_id, :value => @tower.id %>
            <br />
            <%= f.submit "Create", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>

<%= params %>