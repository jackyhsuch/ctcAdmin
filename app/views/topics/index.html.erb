<% @towers.each do |tower| %>
<table class = "table table-hover">
    <a id="<%= tower.name.split.join('_').downcase %>"></a>
    <span style="color:grey"><%= tower.name.upcase %></span>    
         
    <thead>
        <tr>
            <th>
                Topic
                <a href="<%= topics_new_path(:tower_id => tower.id) %>" >
                    <button type = "button" class = "btn btn-default">add</button>
                </a>   
            </th>
            <th>Created at</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @topics.each do |topic| %>
        <% if topic.tower_id == tower.id %>
        <tr>
            <td><%= topic.name %></td>
            <td><%= topic.created_at %></td>
            <td>
                <a href="<%= topic_path(topic.id) %>" >
                    <button type="button" class="btn btn-success" aria-label="Left Align">
                        view
                    </button>
                </a>
                <a href="<%= edit_topic_path(topic.id) %>" >
                    <button type="button" class="btn btn-info" aria-label="Left Align">
                        edit
                    </button>
                </a>
                <%= link_to raw('<button type="button" class="btn btn-danger" aria-label="Left Align">delete</button>'), topic, method: :delete, data: { confirm: "You sure?" } %>
            </td>
        </tr>
        <% end %>
        <% end %>
    </tbody>
</table>
<% end %>


