<% title "New Tower" %>
<h1 class="text-center">New Tower</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @tower do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control'%>
            <br />
            <%= f.hidden_field :id, :value => @tower.id %>
            <%= f.submit "Edit", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>